
# reloads sxhkd configuration:
super + Escape + r
    pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config' -t 1500

# Launch Terminal
super + Return
    alacritty

# Hide or Unhide Polybar
super + p
	sh ~/.config/scripts/toggle-polybar

# Set random wallpaper
super + w
	sh ~/.config/scripts/random_wallpaper

# Change language
Alt_L + shift
	sh ~/.config/scripts/change_language.sh

Shift_L + alt
	sh ~/.config/scripts/change_language.sh
    
# Launch Rofi Menu
super + {d,x}
    {rofi -show drun,sh ~/.config/scripts/powermenu}

# Launch Applications
super + shift + {f,t,c}
	{firefox,telegram-desktop,codium}

ctrl + shift + Escape
	gnome-system-monitor
# Start nekoray
super + shift + n
	/home/ebArch/nekoray-4.0.1-2024-12-12-linux-x64.AppImage

# Select window to close
ctrl + super + alt + q
	{xkill}

# Volume controls
XF86AudioRaiseVolume
    sh ~/.config/scripts/volume --up

XF86AudioLowerVolume
    sh ~/.config/scripts/volume --down


XF86AudioMute
    sh ~/.config/scripts/volume --toggle

# Brightness controls
XF86MonBrightnessUp
    sh ~/.config/scripts/brightness.sh --up

XF86MonBrightnessDown
    sh ~/.config/scripts/brightness.sh --down

# screenshot
Print
    flameshot gui

#
#
# BSPWM HOTKEYS
#
#

# quit/restart bspwm
ctrl + shift + {q,r}
    bspc {quit,wm -r}

# close and kill
super + q
    bspc node -c

super + shift + q
    bspc node -k

# alternate between the tiled and monocle layout
# super + space
# 	bspc node -t "~"{floating,tiled}


#
# state/flags
#

# set the window state
super + {t,ctrl + t,f}
	bspc node -t {tiled,pseudo_tiled,fullscreen,floating}

# set floating window
super + space
	bspc node -t "~"{floating,tiled}


# Change focus to next window, including floating window
alt + {_,shift + }Tab
    bspc node -f {next.local,prev.local}
 
#
# focus/swap
#


# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# change desktop
super + {1-9}
	bspc desktop -f ^{1-9}

# send focus wiindow to desktop
super + shift + {1-9}
    bspc node -d ^{1-9}

#
# preselect
#

# preselect the ratio

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Expanding windows
super + control + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0} 

super + shift + control + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0} 

# Send the window to another edge of the screen
super + {h,j,k,l}
    bspc node -f {west,south,north,east}

super + alt + {h,j,k,l}
    bspc node -s {west,south,north,east}

super + shift + {h,j,k,l}
    bspc node -v {west,south,north,east}

# move a floating window
# TODO: Вызывает конфликт с другими комбинациями 
ctrl + alt + {a,s,w,d}
	bspc node -v {-30 0,0 30,0 -30,30 0}

ctrl + alt + {q,e,z,c}
        bspc node -v {-20 -20,20 -20,-20  20,20  20}

# Preselect the ratio and direction
super + ctrl + {1-9} 
        bspc node -o 0.{1-9}

super + ctrl + alt + {h,j,k,l}
        bspc node -p {west,south,north,east}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window
